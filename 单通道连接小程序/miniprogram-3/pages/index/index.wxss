/**蓝牙玩具控制器样式**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  font-size: 28rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  padding: 15rpx;
  max-width: 100%;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 30rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1989fa;
  display: block;
  margin-bottom: 8rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 主要控制按钮 */
.main-controls {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx 10rpx;
  padding: 0 10rpx;
  gap: 20rpx;
}

/* BCI控制按钮 */
.bci-controls {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx 10rpx;
  padding: 0 10rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-radius: 80rpx;
  transition: all 0.3s ease;
  border: none;
  margin: 10rpx 5rpx;
  max-width: 300rpx;
}

.btn.small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  max-width: 150rpx;
}

.btn.primary {
  background-color: #1989fa;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(25, 137, 250, 0.3);
}

.btn.danger {
  background-color: #ee0a24;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(238, 10, 36, 0.3);
}

.btn.primary:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.btn.link {
  background-color: transparent;
  color: #1989fa;
  border: 1rpx solid #1989fa;
}

/* 状态显示 */
.status {
  text-align: center;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  color: #333;
  font-size: 28rpx;
}

/* 连接状态 */
.connection-status {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.bci-status {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.connection-text {
  font-size: 32rpx;
  padding: 15rpx 30rpx;
  border-radius: 80rpx;
  display: inline-block;
}

.connection-text.connected {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
  font-weight: bold;
}

.connection-text.disconnected {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999;
}

/* 数据接收区域 */
.data-section {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 20rpx 10rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

/* 字节数统计 */
.byte-stats {
  background-color: rgba(248, 248, 248, 0.8);
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #e0e0e0;
}

.stats-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  text-align: center;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.stats-row:last-child {
  border-bottom: none;
}

.stats-row.total {
  background-color: rgba(25, 137, 250, 0.1);
  padding: 10rpx;
  margin: 10rpx -15rpx -15rpx -15rpx;
  border-radius: 0 0 10rpx 10rpx;
  border-top: 1rpx solid #e0e0e0;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.stats-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.stats-value.bci {
  color: #07c160;
}

.stats-value.toy {
  color: #1989fa;
}

.stats-row.total .stats-value {
  color: #1989fa;
  font-size: 26rpx;
}

.data-display {
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #eee;
  max-height: 200rpx;
  overflow-y: auto;
}

.data-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
  font-family: 'Courier New', monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 控制区域 */
.control-section {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 20rpx 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  max-width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

/* 方向控制按钮 */
.control-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.control-row {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
  width: 100%;
}

.direction-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 15rpx;
  font-size: 22rpx;
  padding: 0;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
  font-weight: bold;
}

.direction-btn:active {
  transform: scale(0.9);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.2);
}

.direction-btn.forward {
  background: linear-gradient(135deg, #07c160 0%, #06ad57 100%);
  color: white;
}

.direction-btn.stop {
  background: linear-gradient(135deg, #999 0%, #858585 100%);
  color: white;
}

/* 高级功能区域 */
.advanced-section {
  background-color: rgba(248, 248, 248, 0.9);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #666;
}

/* 设备列表 */
.device-list {
  background-color: white;
  border-radius: 10rpx;
  padding: 10rpx;
  max-height: 300rpx;
  overflow-y: auto;
  margin-top: 15rpx;
}

.device-item {
  padding: 20rpx;
  background-color: #f8f8f8;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.device-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-right: 120rpx;
}

.toy-badge {
  display: inline-block;
  background-color: #ff6b6b;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* 切换高级功能按钮 */
.toggle-advanced {
  text-align: center;
  margin-top: 20rpx;
}

/* 脑电数据显示区域 */
.eeg-section {
  background-color: rgba(240, 248, 255, 0.9);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #4a90e2;
}

.eeg-current-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #e0e0e0;
}

.eeg-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.eeg-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a90e2;
  background-color: rgba(74, 144, 226, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.filter-status {
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #07c160;
}

.filter-status-text {
  font-size: 24rpx;
  color: #07c160;
  font-weight: bold;
  text-align: center;
  display: block;
}

.threshold-control {
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #e0e0e0;
}

.threshold-input-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.threshold-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.threshold-input {
  flex: 1;
  margin-left: 20rpx;
  padding: 10rpx 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #f8f8f8;
}

.auto-control-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.auto-control-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.auto-control-switch {
  transform: scale(1.2);
}

.control-status {
  text-align: center;
  padding: 10rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.status-text {
  font-size: 24rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.status-text.enabled {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.status-text.disabled {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999;
}

.eeg-data-display {
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx;
  border: 1rpx solid #e0e0e0;
  max-height: 200rpx;
  overflow-y: auto;
}

.eeg-data-text {
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  line-height: 1.4;
  color: #555;
  white-space: pre-wrap;
  word-break: break-all;
}


